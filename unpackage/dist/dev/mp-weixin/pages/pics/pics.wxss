
page {
	height: 100%;
}
.pics {
	height: 100%;
	display: flex;
}
.left {
	width: 200rpx;
	height: 100%;
	border-right: 1px solid #eee;
}
.pics .left view {
	height: 60px;
	line-height: 60px;
	color: #333;
	text-align: center;
	font-size: 30rpx;
	border-top: 1px solid #eee;
}
.pics .left view.active {
	background: #B50E03;
	color: #fff;
}
.pics .right {
	/* background: #eee; */
	height: 100%;
	width: 520rpx;
	margin: 0 auto;
}
.pics .right .item image {
	width: 520rpx;
	height: 520rpx;
	border-radius: 5px;
}

